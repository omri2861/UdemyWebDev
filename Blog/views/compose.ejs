<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/compose" method="post" autocomplete="off">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" />
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" name="postBody" style="resize: none;" rows="5"></textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" name="publish">Publish</button>
  </div>
</form>

<%- include("partials/footer") %>